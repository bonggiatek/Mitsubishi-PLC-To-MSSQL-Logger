<Window x:Class="PLCDataLogger.Views.ConfigurationEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PLCDataLogger.ViewModels"
        xmlns:models="clr-namespace:PLCDataLogger.Models"
        xmlns:local="clr-namespace:PLCDataLogger"
        xmlns:converters="clr-namespace:PLCDataLogger.Converters"
        mc:Ignorable="d"
        Title="Register Configuration Editor" Height="750" Width="1100"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:EnumToVisibilityConverter x:Key="EnumToVisibilityConverter"/>
    </Window.Resources>

    <Window.DataContext>
        <vm:ConfigurationEditorViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: Register List -->
        <Border Grid.Row="0" Grid.Column="0" BorderBrush="#2196F3" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,5,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Registers" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" Foreground="#2196F3"/>

                <ListBox Grid.Row="1" ItemsSource="{Binding Registers}" SelectedItem="{Binding SelectedRegister}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5">
                                <TextBlock Text="{Binding FieldName}" FontWeight="Bold" FontSize="14"/>
                                <TextBlock Text="{Binding RegisterAddress}" Foreground="Gray" FontSize="12"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel Grid.Row="2" Margin="0,10,0,0">
                    <Button Content="Add Register" Command="{Binding AddRegisterCommand}" Padding="10,5" Margin="0,0,0,5"
                            Background="#4CAF50" Foreground="White" BorderThickness="0"/>
                    <Button Content="Duplicate" Command="{Binding DuplicateRegisterCommand}" Padding="10,5" Margin="0,0,0,5"
                            Background="#2196F3" Foreground="White" BorderThickness="0"/>
                    <Button Content="Delete" Command="{Binding DeleteRegisterCommand}" Padding="10,5"
                            Background="#F44336" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Right Panel: Register Details -->
        <Border Grid.Row="0" Grid.Column="1" BorderBrush="#2196F3" BorderThickness="1" CornerRadius="5" Padding="15" Margin="5,0,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel IsEnabled="{Binding SelectedRegister, Converter={x:Static local:NullToBoolConverter.Instance}}">
                    <TextBlock Text="Register Details" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" Foreground="#2196F3"/>

                    <!-- Basic Settings -->
                    <GroupBox Header="Basic Settings" Padding="10" Margin="0,0,0,15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Field Name:" VerticalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding SelectedRegister.FieldName, UpdateSourceTrigger=PropertyChanged}" Padding="5" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Register Address:" VerticalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SelectedRegister.RegisterAddress, UpdateSourceTrigger=PropertyChanged}" Padding="5" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Description:" VerticalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding SelectedRegister.Description, UpdateSourceTrigger=PropertyChanged}" Padding="5" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Data Type:" VerticalAlignment="Center" Margin="0,0,0,10"/>
                            <ComboBox Grid.Row="3" Grid.Column="1" SelectedItem="{Binding SelectedRegister.DataType}" Padding="5" Margin="0,0,0,10">
                                <ComboBox.ItemsSource>
                                    <x:Array Type="models:DataType">
                                        <models:DataType>INT</models:DataType>
                                        <models:DataType>UINT</models:DataType>
                                        <models:DataType>FLOAT</models:DataType>
                                        <models:DataType>BOOL</models:DataType>
                                        <models:DataType>STRING</models:DataType>
                                    </x:Array>
                                </ComboBox.ItemsSource>
                            </ComboBox>

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="Length:" VerticalAlignment="Center" Margin="0,0,0,10"/>
                            <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding SelectedRegister.Length, UpdateSourceTrigger=PropertyChanged}" Padding="5" Margin="0,0,0,10"/>

                            <TextBlock Grid.Row="5" Grid.Column="0" Text="Unit:" VerticalAlignment="Center"/>
                            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding SelectedRegister.Unit, UpdateSourceTrigger=PropertyChanged}" Padding="5"/>
                        </Grid>
                    </GroupBox>

                    <!-- SQL Configuration -->
                    <GroupBox Header="SQL Database Logging" Padding="10" Margin="0,0,0,15">
                        <StackPanel>
                            <Grid IsEnabled="{Binding SelectedRegister.Sql, Converter={x:Static local:NullToBoolConverter.Instance}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Connection String:" VerticalAlignment="Center" Margin="0,0,0,10"/>
                                <Grid Grid.Row="0" Grid.Column="1" Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" Text="{Binding SelectedRegister.Sql.ConnectionString, UpdateSourceTrigger=PropertyChanged}" Padding="5" Margin="0,0,5,0"/>
                                    <Button Grid.Column="1" Content="Test" Command="{Binding TestDatabaseConnectionCommand}" Padding="10,5"
                                            Background="#2196F3" Foreground="White" BorderThickness="0"/>
                                </Grid>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Table Name:" VerticalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding SelectedRegister.Sql.TableName, UpdateSourceTrigger=PropertyChanged}" Padding="5" Margin="0,0,0,10"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Log Mode:" VerticalAlignment="Center" Margin="0,0,0,10"/>
                                <ComboBox Grid.Row="2" Grid.Column="1" SelectedItem="{Binding SelectedRegister.Sql.LogMode}" Padding="5" Margin="0,0,0,10">
                                    <ComboBox.ItemsSource>
                                        <x:Array Type="models:LogMode">
                                            <models:LogMode>Disabled</models:LogMode>
                                            <models:LogMode>Interval</models:LogMode>
                                            <models:LogMode>OnChange</models:LogMode>
                                            <models:LogMode>Both</models:LogMode>
                                        </x:Array>
                                    </ComboBox.ItemsSource>
                                </ComboBox>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Interval (seconds):" VerticalAlignment="Center" Margin="0,0,0,10"/>
                                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding SelectedRegister.Sql.IntervalSeconds, UpdateSourceTrigger=PropertyChanged}" Padding="5" Margin="0,0,0,10"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Log Condition:" VerticalAlignment="Center" ToolTip="Optional condition to filter when to log (leave empty to always log)"/>
                                <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding SelectedRegister.Sql.LogCondition, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="5" TextWrapping="Wrap"
                                         ToolTip="Example: Value == '1' AND Reg_Temperature > 80"/>
                            </Grid>

                            <!-- Log Condition Help -->
                            <Expander Header="Log Condition Syntax Help" IsExpanded="False" Margin="0,10,0,0">
                                <Border Background="#F5F5F5" Padding="15" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
                                    <StackPanel>
                                        <!-- Performance Note -->
                                        <TextBlock TextWrapping="Wrap" Margin="0,0,0,12" FontSize="11">
                                            <Run FontWeight="Bold" Foreground="#2196F3">ℹ Performance Boost:</Run>
                                            <Run>Conditions are evaluated BEFORE executing SQL queries, reducing database load.</Run>
                                        </TextBlock>

                                        <!-- Variables Section -->
                                        <TextBlock Text="VARIABLES" FontWeight="Bold" FontSize="10" Foreground="#555" Margin="0,0,0,4"/>
                                        <Border Background="White" Padding="8" Margin="0,0,0,12" CornerRadius="3">
                                            <StackPanel>
                                                <TextBlock FontFamily="Consolas" FontSize="11" Margin="0,0,0,3">
                                                    <Run FontWeight="Bold" Foreground="#0D47A1">Value</Run>
                                                    <Run Foreground="#666">- Current register value</Run>
                                                </TextBlock>
                                                <TextBlock FontFamily="Consolas" FontSize="11">
                                                    <Run FontWeight="Bold" Foreground="#0D47A1">Reg_{FieldName}</Run>
                                                    <Run Foreground="#666">- Other register values (e.g., Reg_Temperature)</Run>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>

                                        <!-- Operators Section -->
                                        <TextBlock Text="OPERATORS" FontWeight="Bold" FontSize="10" Foreground="#555" Margin="0,0,0,4"/>
                                        <Border Background="White" Padding="8" Margin="0,0,0,12" CornerRadius="3">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="0" Grid.Column="0" FontFamily="Consolas" FontSize="11" Margin="0,0,15,3" FontWeight="Bold" Foreground="#C2185B">==, !=</TextBlock>
                                                <TextBlock Grid.Row="0" Grid.Column="1" FontSize="11" Margin="0,0,0,3" Foreground="#666">Equal, Not equal</TextBlock>

                                                <TextBlock Grid.Row="1" Grid.Column="0" FontFamily="Consolas" FontSize="11" Margin="0,0,15,3" FontWeight="Bold" Foreground="#C2185B">&gt;, &lt;, &gt;=, &lt;=</TextBlock>
                                                <TextBlock Grid.Row="1" Grid.Column="1" FontSize="11" Margin="0,0,0,3" Foreground="#666">Comparison operators</TextBlock>

                                                <TextBlock Grid.Row="2" Grid.Column="0" FontFamily="Consolas" FontSize="11" Margin="0,0,15,0" FontWeight="Bold" Foreground="#C2185B">AND, OR</TextBlock>
                                                <TextBlock Grid.Row="2" Grid.Column="1" FontSize="11" Foreground="#666">Logical operators</TextBlock>
                                            </Grid>
                                        </Border>

                                        <!-- Examples Section -->
                                        <TextBlock Text="EXAMPLES" FontWeight="Bold" FontSize="10" Foreground="#555" Margin="0,0,0,4"/>
                                        <Border Background="White" Padding="8" Margin="0,0,0,12" CornerRadius="3">
                                            <StackPanel>
                                                <TextBlock FontFamily="Consolas" FontSize="11" Foreground="#1B5E20" Margin="0,0,0,4">Value == '1'</TextBlock>
                                                <TextBlock FontFamily="Consolas" FontSize="11" Foreground="#1B5E20" Margin="0,0,0,4">Value != '0' AND Reg_Temperature &gt; 80</TextBlock>
                                                <TextBlock FontFamily="Consolas" FontSize="11" Foreground="#1B5E20" Margin="0,0,0,4">Reg_Pressure &gt;= 100 OR Reg_Status == 'Error'</TextBlock>
                                                <TextBlock FontFamily="Consolas" FontSize="11" Foreground="#1B5E20">Value == '1' AND (Reg_T1 == '0' OR Reg_T2 == '1')</TextBlock>
                                            </StackPanel>
                                        </Border>

                                        <!-- Notes Section -->
                                        <TextBlock Text="NOTES" FontWeight="Bold" FontSize="10" Foreground="#555" Margin="0,0,0,4"/>
                                        <Border Background="White" Padding="8" CornerRadius="3">
                                            <StackPanel>
                                                <TextBlock FontSize="11" Foreground="#666" Margin="0,0,0,2">• Leave empty to always log (no filtering)</TextBlock>
                                                <TextBlock FontSize="11" Foreground="#666" Margin="0,0,0,2">• Conditions are case-insensitive</TextBlock>
                                                <TextBlock FontSize="11" Foreground="#666" Margin="0,0,0,2">• Use quotes for string values</TextBlock>
                                                <TextBlock FontSize="11" Foreground="#666">• Numeric comparison is automatic</TextBlock>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </Expander>
                        </StackPanel>
                    </GroupBox>

                    <!-- Custom SQL Query -->
                    <GroupBox Header="Custom SQL Query" Padding="10" IsEnabled="{Binding SelectedRegister.Sql, Converter={x:Static local:NullToBoolConverter.Instance}}">
                        <StackPanel>
                            <CheckBox Content="Use Custom Query" IsChecked="{Binding SelectedRegister.Sql.UseCustomQuery}" Margin="0,0,0,10" FontWeight="Bold"/>

                            <Grid IsEnabled="{Binding SelectedRegister.Sql.UseCustomQuery}">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="200"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Template Selection -->
                                <Grid Grid.Row="0" Margin="0,0,0,10">
                                    <StackPanel>
                                        <TextBlock Text="SQL Query Templates:" FontWeight="Bold" Margin="0,0,0,5"/>
                                        <ComboBox ItemsSource="{Binding Templates}" SelectedItem="{Binding SelectedTemplate}" Padding="5" Margin="0,0,0,5"/>
                                        <Button Content="Apply Template" Command="{Binding ApplyTemplateCommand}" Padding="10,5"
                                                Background="#4CAF50" Foreground="White" BorderThickness="0"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Query Editor -->
                                <TextBlock Grid.Row="1" Text="Custom Query:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBox Grid.Row="2" Text="{Binding SelectedRegister.Sql.CustomQuery, UpdateSourceTrigger=PropertyChanged}"
                                         AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                                         FontFamily="Consolas" FontSize="12" Padding="5" Margin="0,0,0,10"/>

                                <!-- Placeholder Help -->
                                <Expander Grid.Row="3" Header="Available Placeholders" IsExpanded="False">
                                    <TextBox Text="{Binding PlaceholderHelp, Mode=OneWay}" IsReadOnly="True"
                                             TextWrapping="Wrap" FontFamily="Consolas" FontSize="11"
                                             Background="#F5F5F5" Padding="10" BorderThickness="0"/>
                                </Expander>
                            </Grid>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Bottom Action Bar -->
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" BorderBrush="#2196F3" BorderThickness="0,1,0,0" Padding="10" Background="#F5F5F5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="{Binding StatusMessage}" VerticalAlignment="Center" Foreground="Gray"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Save Configuration" Command="{Binding SaveConfigurationCommand}" Padding="15,8" Margin="0,0,10,0"
                            Background="#4CAF50" Foreground="White" BorderThickness="0" FontWeight="Bold"/>
                    <Button Content="Reload" Command="{Binding LoadConfigurationCommand}" Padding="15,8" Margin="0,0,10,0"
                            Background="#2196F3" Foreground="White" BorderThickness="0"/>
                    <Button Content="Close" Click="CloseButton_Click" Padding="15,8"
                            Background="#757575" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
